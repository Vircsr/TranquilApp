<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="center"
            android:text="铃声"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="电话铃声"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="新闻联播"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="雪之梦"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="皮卡丘"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="叮铃铃"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="SJLT"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="八音盒"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>
        <TextView style="@style/horizontal_line_style"/>
        <TextView
            android:id="@+id/ring_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="月宝宝"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>
        <TextView style="@style/horizontal_line_style"/>
        <TextView
            android:id="@+id/ring_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:text="Kalimbell"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView style="@style/horizontal_line_style"/>

        <TextView
            android:id="@+id/ring_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableRight="@null"
            android:text="确定"
            android:textColor="@color/black_33"
            android:textSize="20sp"/>

        <TextView
            style="@style/horizontal_line_style"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</RelativeLayout>